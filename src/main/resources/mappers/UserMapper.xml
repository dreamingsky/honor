<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="honor.user.dao.UserDao">

	<resultMap type="user" id="userMap">
        <id property="id" column="id" jdbcType="varchar"/>
        <result property="loginName" column="login_name" jdbcType=""/>
        <result property="chinaName" column="user_name" jdbcType=""/>
        <result property="password" column="login_password" jdbcType=""/>
        <result property="userType" column="user_type" jdbcType=""/>
        <result property="userEmail" column="user_email" jdbcType=""/>
        <result property="status" column="status" jdbcType=""/>
    </resultMap>

    <select id="getUserById" parameterType="String" resultMap="userMap">
        select * from user_info where id = #{id}
    </select>
    <select id="getUserByNameAndPassword"  resultMap="userMap">
        select * from user_info where login_name = #{0} and login_password= #{1}
    </select>
    
    <select id="getUserList"  resultMap="userMap">
        select * from user_info where status=1
    </select>
    
    <insert id="saveUser" parameterType="user">
        insert into user_info (id,login_name,user_name,password,user_type,user_email,status) 
        values (#{id},#{loginName},#{chinaName},#{password},#{userType},#{userEmail},#{status})
    </insert>
    <select id="getUserListByPage" parameterType="user">
		select * from user_info where 1=1
		<if test="chinaName!=null">
		    and user_name like CONCAT('%','#{chinaName}','%')
		</if>       
    </select>
</mapper>